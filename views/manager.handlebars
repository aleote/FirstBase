      </div>
    </div>

    <!-- Row 2 -->
     <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6" id="grid4">
        <div class="gridDiv">

        	<h2>CLASSES</h2>
		        <div class="info">
		        	 <button class="btn btn-basic">VIEW / EDIT</button>
		        	 <br><br>
		        	   <button class="btn btn-basic" data-toggle="modal" data-target="#addClassModal"  data-backdrop="static" data-keyboard="false">ADD NEW CLASS</button>

