      	</div>
    </div>

</div>





<div class="row center-content" id="">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
	<a name="classes"></a>
	<div class="collapsible">

		<h3 class="heading">Classes Content</h3>
		<div class="contents">
           
            {{#each classes}}
            {{> classes/classes-partial}}
            {{/each}}
		</div>
	</div>	

<hr>
	<div class="collapsible">
		<h3 class="heading">Instructors Content</h3>
		
		<div class="contents">
            {{#each instructors}}
            {{> instructors/instructors-partial}}
            {{/each}}
		</div>
	</div>	
	
</div>

</div>

<!-- Modal CLASSES -->

<div class="modal fade" role="dialog" id="addClassModal" data-target="#addClassModal">

<div class="modal-dialog">
				
			<!-- Modal content-->
<div class="modal-content">

		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">&times;</button>

		<h2 class="modal-title">Add New Class</h2>
			</div>
			<div class="modal-body">

<div class="form-group">
						
<label for="title">Class Name:</label>
<input type="text" class="form-control" id="className">
</div>



<div class="form-group">
<label for="body">Description:</label>
<textarea class="form-control" rows="3" id="description"></textarea>
</div>

<div class="form-group">
	<label for="category">Select Category:</label>
	<select class="form-control" id="category">
    <option value="Yoga">Yoga</option>
    <option value="Boxing">Boxing</option>
    <option value="Tennis">Tennis</option>
	</select>
</div>

<div class="form-group">
	<label for="date" >Class Time:</label>
	<input id="startTime" type='text' class="form-control" placeholder="YYYY:MM:DD HH:MM:SS"/>

</div>

		<div class="modal-footer">
			<button id="closeWindow" type="button" class="btn btn-default" data-dismiss="modal">Close</button>

			<button id="addClassSubmit" type="submit" class="btn btn-basic submit">Submit</button>
		</div>
	</div>
	</div>
</div>
</div>





<!-- Modal INSTRUCTORS-->
<div class="modal fade" role="dialog" id="addInstructorModal" data-target="#addInstructorModal">

<div class="modal-dialog">
				
<!-- Modal content-->
<div class="modal-content">

		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">&times;</button>

		<h2 class="modal-title">Add New Instructor</h2>
			</div>

<div class="modal-body">

<div class="form-group">
						
<label for="title">Instructor Name:</label>
<input type="text" class="form-control" id="fullName">
</div>


<div class="form-group">
<label for="body">Bio:</label>
<textarea class="form-control" rows="3" id="bio"></textarea>
</div>


<div class="form-group">
<label for="title">Classes:</label>
<input type="text" class="form-control" id="teachClass" placeholder="Enter all classes for this teacher">
</div>
</div>



<div class="modal-footer">
			<button id="closeWindow" type="button" class="btn btn-default" data-dismiss="modal">Close</button>

			<button id="addInstructorSubmit" type="submit" class="btn btn-basic submit">Submit</button>
		</div>
	</div>
	</div>
</div>
</div>






