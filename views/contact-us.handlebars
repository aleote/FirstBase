<div class="row">
	<div id="contact-form" class="
		col-lg-offset-1 col-lg-8 col-md-offset-1 col-md-8 col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-10 align-content-center">
		<h1 class="darkCustomColor">Contact Us</h1>
		<form>
			<div class="form-group">
				<label for="usr">Name:</label>
				<input type="text" class="form-control" id="usr">
			</div>
			<div class="form-group">
				<label for="email">Email address:</label>
				<input type="email" class="form-control" id="email">
			</div>
			<div class="form-group">
				<label for="comment">Comment:</label>
				<textarea class="form-control" rows="5" id="comment"></textarea>
			</div>
			<button id="submit-form" type="submit" class="btn btn-basic">Submit</button>
		</form>
	</div>
</div>